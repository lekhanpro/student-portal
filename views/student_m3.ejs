<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Student Dashboard - EduPortal</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&display=swap"
        rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .material-symbols-outlined {
            font-size: 24px;
            vertical-align: middle;
        }
    </style>
</head>

<body class="bg-gray-900 text-white min-h-screen">
    <!-- Header -->
    <header class="bg-gray-800 border-b border-gray-700">
        <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
            <div class="flex items-center gap-3">
                <div
                    class="w-12 h-12 rounded-full bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-xl font-bold">
                    <%= user.fullname.charAt(0) %>
                </div>
                <div>
                    <h1 class="text-lg font-bold">
                        <%= user.fullname %>
                    </h1>
                    <p class="text-gray-400 text-sm">
                        <%= user.email %>
                    </p>
                </div>
            </div>
            <a href="/logout"
                class="bg-red-500/20 hover:bg-red-500/30 text-red-400 px-4 py-2 rounded-lg flex items-center gap-2">
                <span class="material-symbols-outlined">logout</span>
                Logout
            </a>
        </div>
    </header>

    <main class="max-w-7xl mx-auto px-4 py-6">
        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
            <!-- Attendance Card -->
            <div class="bg-gray-800 rounded-xl p-6 border border-gray-700">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-gray-400 text-sm font-medium">Attendance</h3>
                    <span class="material-symbols-outlined text-blue-400">calendar_today</span>
                </div>
                <p class="text-4xl font-bold text-blue-400">
                    <%= attendancePercentage %>%
                </p>
                <p class="text-gray-500 text-sm mt-1">
                    <%= presentDays %> / <%= totalDays %> days present
                </p>
                <div class="mt-3 h-2 bg-gray-700 rounded-full overflow-hidden">
                    <div class="h-full bg-blue-500 rounded-full" style="width: <%= attendancePercentage %>%"></div>
                </div>
            </div>

            <!-- Grades Card -->
            <div class="bg-gray-800 rounded-xl p-6 border border-gray-700">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-gray-400 text-sm font-medium">Total Subjects</h3>
                    <span class="material-symbols-outlined text-green-400">school</span>
                </div>
                <p class="text-4xl font-bold text-green-400">
                    <%= marks.length %>
                </p>
                <p class="text-gray-500 text-sm mt-1">Subjects graded</p>
            </div>

            <!-- Assignments Card -->
            <div class="bg-gray-800 rounded-xl p-6 border border-gray-700">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-gray-400 text-sm font-medium">Assignments</h3>
                    <span class="material-symbols-outlined text-orange-400">assignment</span>
                </div>
                <p class="text-4xl font-bold text-orange-400">
                    <%= assignments.filter(a=> a.status === 'pending').length %>
                </p>
                <p class="text-gray-500 text-sm mt-1">Pending submissions</p>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <!-- Attendance History -->
            <div class="bg-gray-800 rounded-xl border border-gray-700 overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-700 flex items-center gap-2">
                    <span class="material-symbols-outlined text-blue-400">event_available</span>
                    <h2 class="text-lg font-semibold">Recent Attendance</h2>
                </div>
                <div class="p-4">
                    <% if(attendanceRecords.length> 0) { %>
                        <div class="space-y-2">
                            <% attendanceRecords.forEach(function(record) { %>
                                <div class="flex items-center justify-between bg-gray-700/50 rounded-lg px-4 py-3">
                                    <span class="text-gray-300">
                                        <%= record.date %>
                                    </span>
                                    <% if(record.status==='present' ) { %>
                                        <span
                                            class="inline-flex items-center gap-1 text-green-400 bg-green-500/20 px-3 py-1 rounded-full text-sm">
                                            <span class="material-symbols-outlined text-sm">check_circle</span>
                                            Present
                                        </span>
                                        <% } else { %>
                                            <span
                                                class="inline-flex items-center gap-1 text-red-400 bg-red-500/20 px-3 py-1 rounded-full text-sm">
                                                <span class="material-symbols-outlined text-sm">cancel</span>
                                                Absent
                                            </span>
                                            <% } %>
                                </div>
                                <% }); %>
                        </div>
                        <% } else { %>
                            <div class="text-center py-8 text-gray-500">
                                <span class="material-symbols-outlined text-4xl mb-2 block">event_busy</span>
                                <p>No attendance records yet</p>
                            </div>
                            <% } %>
                </div>
            </div>

            <!-- Grades -->
            <div class="bg-gray-800 rounded-xl border border-gray-700 overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-700 flex items-center gap-2">
                    <span class="material-symbols-outlined text-green-400">grade</span>
                    <h2 class="text-lg font-semibold">My Grades</h2>
                </div>
                <div class="p-4">
                    <% if(marks.length> 0) { %>
                        <div class="space-y-2">
                            <% marks.forEach(function(mark) { let gradeColor='text-green-400 bg-green-500/20' ;
                                if(mark.marks < 40) gradeColor='text-red-400 bg-red-500/20' ; else if(mark.marks < 60)
                                gradeColor='text-yellow-400 bg-yellow-500/20' ; else if(mark.marks < 75)
                                gradeColor='text-blue-400 bg-blue-500/20' ; %>
                                <div class="flex items-center justify-between bg-gray-700/50 rounded-lg px-4 py-3">
                                    <div>
                                        <p class="font-medium text-gray-200">
                                            <%= mark.subject %>
                                        </p>
                                        <p class="text-xs text-gray-500">
                                            <%= mark.date %>
                                        </p>
                                    </div>
                                    <span class="<%= gradeColor %> px-3 py-1 rounded-full text-sm font-semibold">
                                        <%= mark.marks %>/100
                                    </span>
                                </div>
                                <% }); %>
                        </div>
                        <% } else { %>
                            <div class="text-center py-8 text-gray-500">
                                <span class="material-symbols-outlined text-4xl mb-2 block">school</span>
                                <p>No grades available yet</p>
                            </div>
                            <% } %>
                </div>
            </div>
        </div>

        <!-- Assignments -->
        <div class="mt-6 bg-gray-800 rounded-xl border border-gray-700 overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-700 flex items-center gap-2">
                <span class="material-symbols-outlined text-orange-400">assignment</span>
                <h2 class="text-lg font-semibold">My Assignments</h2>
            </div>
            <div class="p-4">
                <% if(assignments.length> 0) { %>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                        <% assignments.forEach(function(assignment) { %>
                            <div class="bg-gray-700/50 rounded-lg p-4">
                                <div class="flex items-start justify-between">
                                    <div>
                                        <h4 class="font-medium text-gray-200">
                                            <%= assignment.title %>
                                        </h4>
                                        <p class="text-sm text-gray-500 flex items-center gap-1 mt-1">
                                            <span class="material-symbols-outlined text-sm">schedule</span>
                                            Due: <%= assignment.due_date %>
                                        </p>
                                    </div>
                                    <% if(assignment.status==='submitted' ) { %>
                                        <span
                                            class="inline-flex items-center text-green-400 bg-green-500/20 px-2 py-1 rounded text-xs">
                                            Submitted
                                        </span>
                                        <% } else { %>
                                            <span
                                                class="inline-flex items-center text-orange-400 bg-orange-500/20 px-2 py-1 rounded text-xs">
                                                Pending
                                            </span>
                                            <% } %>
                                </div>
                            </div>
                            <% }); %>
                    </div>
                    <% } else { %>
                        <div class="text-center py-8 text-gray-500">
                            <span class="material-symbols-outlined text-4xl mb-2 block">task</span>
                            <p>No assignments yet</p>
                        </div>
                        <% } %>
            </div>
        </div>
    </main>
</body>

</html>