<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Student Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <%- include('partials/navbar', { user }) %>

        <div class="dashboard-container">
            <div class="container">
                <h1 class="text-white mb-4">‚öôÔ∏è Admin Dashboard</h1>

                <!-- System Overview -->
                <div class="row mb-4">
                    <div class="col-md-4 mb-3">
                        <div class="stat-card">
                            <div class="stat-icon primary">üë•</div>
                            <h2>
                                <%= stats.totalUsers %>
                            </h2>
                            <p class="text-muted mb-0">Total Users</p>
                        </div>
                    </div>

                    <div class="col-md-4 mb-3">
                        <div class="stat-card">
                            <div class="stat-icon success">üéì</div>
                            <h2>
                                <%= stats.totalStudents %>
                            </h2>
                            <p class="text-muted mb-0">Students</p>
                        </div>
                    </div>

                    <div class="col-md-4 mb-3">
                        <div class="stat-card">
                            <div class="stat-icon info">üë®‚Äçüè´</div>
                            <h2>
                                <%= stats.totalFaculty %>
                            </h2>
                            <p class="text-muted mb-0">Faculty Members</p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <!-- User Management -->
                    <div class="col-lg-8 mb-4">
                        <div class="card">
                            <div class="card-header">
                                üë• User Management
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Name</th>
                                                <th>Email</th>
                                                <th>Role</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% users.forEach(u=> { %>
                                                <tr>
                                                    <td>
                                                        <%= u.id %>
                                                    </td>
                                                    <td><strong>
                                                            <%= u.fullname %>
                                                        </strong></td>
                                                    <td>
                                                        <%= u.email %>
                                                    </td>
                                                    <td>
                                                        <% if (u.role==='admin' ) { %>
                                                            <span class="badge bg-danger">Admin</span>
                                                            <% } else if (u.role==='faculty' ) { %>
                                                                <span class="badge bg-primary">Faculty</span>
                                                                <% } else { %>
                                                                    <span class="badge bg-success">Student</span>
                                                                    <% } %>
                                                    </td>
                                                    <td>
                                                        <% if (u.id !==user.id) { %>
                                                            <button class="btn btn-sm btn-danger"
                                                                onclick="deleteUser(<%= u.id %>, '<%= u.fullname %>')">
                                                                Delete
                                                            </button>
                                                            <% } else { %>
                                                                <span class="text-muted">Current User</span>
                                                                <% } %>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Add New User -->
                    <div class="col-lg-4 mb-4">
                        <div class="card">
                            <div class="card-header">
                                ‚ûï Add New User
                            </div>
                            <div class="card-body">
                                <form onsubmit="addUser(event)">
                                    <div class="mb-3">
                                        <label for="fullname" class="form-label">Full Name</label>
                                        <input type="text" class="form-control" id="fullname" name="fullname" required
                                            placeholder="John Doe">
                                    </div>

                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" class="form-control" id="email" name="email" required
                                            placeholder="user@school.com">
                                    </div>

                                    <div class="mb-3">
                                        <label for="password" class="form-label">Password</label>
                                        <input type="password" class="form-control" id="password" name="password"
                                            required placeholder="Enter password">
                                    </div>

                                    <div class="mb-3">
                                        <label for="role" class="form-label">Role</label>
                                        <select class="form-select" id="role" name="role" required>
                                            <option value="">Select role...</option>
                                            <option value="student">Student</option>
                                            <option value="faculty">Faculty</option>
                                            <option value="admin">Admin</option>
                                        </select>
                                    </div>

                                    <button type="submit" class="btn btn-success w-100">Add User</button>
                                </form>
                            </div>
                        </div>

                        <!-- System Info -->
                        <div class="card mt-3">
                            <div class="card-header">
                                ‚ÑπÔ∏è System Information
                            </div>
                            <div class="card-body">
                                <div class="mb-2">
                                    <small class="text-muted">Database:</small>
                                    <strong class="d-block">SQLite</strong>
                                </div>
                                <div class="mb-2">
                                    <small class="text-muted">Backend:</small>
                                    <strong class="d-block">Node.js + Express</strong>
                                </div>
                                <div class="mb-2">
                                    <small class="text-muted">Status:</small>
                                    <span class="badge bg-success">Online</span>
                                </div>
                                <div>
                                    <small class="text-muted">Version:</small>
                                    <strong class="d-block">1.0.0</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="/js/charts.js"></script>
</body>

</html>